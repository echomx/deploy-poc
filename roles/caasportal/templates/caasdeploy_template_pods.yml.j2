          - name: WEB_PORT
            value: "8080"
          - name: NFS_URL
            value: {{ groups.nfsserver[0] }}
          - name: NFS_PORT
            value: "8080"
          - name: OS_BJ_URL
            value: {{ groups.masters[0] }} 
          - name: LANG
            value: C.UTF-8
          image: {{ harbor_url }}/{{ caas_project }}/{{ muddle_ha_tag }}
          imagePullPolicy: Always
          name: caas-haproxy
          ports:
          - containerPort: 8888
            protocol: TCP
          resources:
            limits:
              cpu: 500m
              memory: 2Gi
            requests:
              cpu: 120m
              memory: 1Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
        dnsPolicy: ClusterFirst
        imagePullSecrets:
          - name: deploycaas
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
---
  apiVersion: apps.openshift.io/v1
  kind: DeploymentConfig
  metadata:
    labels:
      app: caas-hcenter
    name: caas-hcenter
    namespace: caasportal
  spec:
    replicas: 1
    selector:
      deploymentconfig: caas-hcenter
    template:
      metadata:
        labels:
          app: caas-hcenter
          deploymentconfig: caas-hcenter
        name: caas-hcenter
        namespace: caasportal
      spec:
        containers:
        - env:
          - name: LANG
            value: C.UTF-8
          - name: EGG_WORKERS
            value: "1"
          - name: EGG_SERVER_ENV
            value: caas
          - name: CAAS_BACKEND
            value: caas-muddle
          - name: CAAS_BACKEND_PORT
            value: "8080"
          - name: CLIENT_LOGO
            value: eking
          image: {{ harbor_url }}/{{ caas_project }}/{{ hcenter_tag }}
          imagePullPolicy: Always
          name: caas-hcenter
          ports:
          - containerPort: 8080
            protocol: TCP
          resources:
            limits:
              cpu: 500m
              memory: 2Gi
            requests:
              cpu: 120m
              memory: 1Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
          - mountPath: /opt/hcenter/storage/config/
            name: caas-hcenter-config
        dnsPolicy: ClusterFirst
        imagePullSecrets:
          - name: deploycaas
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
        volumes:
        - configMap:
            defaultMode: 420
            name: caas-hcenter-config
          name: caas-hcenter-config
---
  apiVersion: apps.openshift.io/v1
  kind: DeploymentConfig
  metadata:
    labels:
      app: caas-muddle
    name: caas-muddle
    namespace: caasportal
  spec:
    replicas: 1
    selector:
      deploymentconfig: caas-muddle
    template:
      metadata:
        labels:
          app: caas-muddle
          deploymentconfig: caas-muddle
        name: caas-muddle
        namespace: caasportal
      spec:
        containers:
        - env:
          - name: PATH
            value: /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
          - name: APPS_HOME
            value: /AppServer
          - name: TZ
            value: Asia/Shanghai
          - name: JAVA_HOME
            value: /usr/lib/jvm/java-8-openjdk-amd64
          - name: CA_CERTIFICATES_JAVA_VERSION
            value: "20140324"
          - name: JAVA_OPTS
            value: -Xmx2048m -Xms2048m
          - name: JAVA_VERSION
            value: 8u111
          - name: LANG
            value: C.UTF-8
          - name: DB_URL
            value: jdbc:mysql://caasportal-caas-mysql.caas.ccoop.cn:31689/hcpaas?characterEncoding=utf8&autoReconnect=true&allowMultiQueries=true
          - name: REDIS_URL
            value: caasportal-caas-redis.caas.ccoop.cn
          - name: REDIS_PORT
            value: "30384"
          - name: vol_create_sleep
            value: "5000"
          - name: openshift_terminal_url
            value: ws://{{ muddle_url }}
          - name: hb_info
            value: {{ harbor_password_encrypted }}
          - name: lic_data
            value: {{ license_key }} 
          - name: JAVA_DEBIAN_VERSION
            value: 8u111-b14-2~bpo8+1
          image: {{ harbor_url }}/{{ caas_project }}/{{ muddle_tag }}
          imagePullPolicy: Always
          name: caas-muddle
          ports:
          - containerPort: 8080
            hostPort: 8080
            protocol: TCP
          resources:
            limits:
              cpu: 500m
              memory: 2Gi
            requests:
              cpu: 120m
              memory: 1Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
        dnsPolicy: ClusterFirst
        hostNetwork: true
        imagePullSecrets:
          - name: deploycaas
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
---
  apiVersion: apps.openshift.io/v1
  kind: DeploymentConfig
  metadata:
    labels:
      app: caas-mysql
    name: caas-mysql
    namespace: caasportal
  spec:
    replicas: 1
    selector:
      deploymentconfig: caas-mysql
    template:
      metadata:
        labels:
          app: caas-mysql
          deploymentconfig: caas-mysql
        name: caas-mysql
        namespace: caasportal
      spec:
        containers:
        - env:
          - name: MYSQL_ROOT_PASSWORD
            value: adminpwd
          - name: MYSQL_USER
            value: caasportal
          - name: MYSQL_PASSWORD
            value: adminpwd
          - name: MYSQL_DATABASE
            value: hcpaas
          image: {{ harbor_url }}/{{ caas_project }}/{{ mysql_tag }}
          imagePullPolicy: Always
          name: caas-mysql
          ports:
          - containerPort: 3306
            protocol: TCP
          resources:
            limits:
              cpu: "1"
              memory: 4Gi
            requests:
              cpu: 500m
              memory: 2Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
          - mountPath: /var/lib/mysql/
            name: caasportalmysqldata
        dnsPolicy: ClusterFirst
        imagePullSecrets:
          - name: deploycaas
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
        volumes:
        - name: caasportalmysqldata
          persistentVolumeClaim:
            claimName: caasportalmysqldata
