---
  apiVersion: apps.openshift.io/v1
  kind: DeploymentConfig
  metadata:
    labels:
      app: caas-agamaha
    name: caas-agamaha
    namespace: caasportal
  spec:
    replicas: 1
    selector:
      deploymentconfig: caas-agamaha
    template:
      metadata:
        labels:
          app: caas-agamaha
          deploymentconfig: caas-agamaha
        name: caas-agamaha
        namespace: caasportal
      spec:
        containers:
        - env:
          - name: HCENTER_SERVER
            value: caas-hcenter
          - name: HCENTER_PORT
            value: "8080"
          - name: WEB_SERVER
            value: caas-haproxy
          - name: WEB_PORT
            value: "8888"
          image: {{ harbor_url }}/{{ caas_project }}/{{ hcenter_ha_tag }}
          imagePullPolicy: Always
          name: caas-agamaha
          ports:
          - containerPort: 8888
            protocol: TCP
          resources:
            limits:
              cpu: 500m
              memory: 2Gi
            requests:
              cpu: 120m
              memory: 1Gi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
        dnsPolicy: ClusterFirst
        imagePullSecrets:
          - name: deploycaas
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
---
  apiVersion: apps.openshift.io/v1
  kind: DeploymentConfig
  metadata:
