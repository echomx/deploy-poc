[OSEv3:vars]
ansible_ssh_user=root
# 日志输出级别 
# 0:错误和警告
# 2:默认级别
# 4:调式级别
# 6:API调式级别
# 8:API包体调式级别
debug_level=2
containerized=false
deployment_type=origin
#enable_excluders=false
# 多租户网络
os_sdn_network_plugin_name=redhat/openshift-ovs-multitenant

openshift_master_identity_providers=[{'name': 'my_ldap_provider', 'challenge': 'true', 'login': 'true', 'kind': 'LDAPPasswordIdentityProvider', 'attributes': {'id': ['dn'], 'email': ['mail'], 'name': ['cn'], 'preferredUsername': ['cn']}, 'bindDN': 'cn=admin,dc={{ ldap_second }},dc={{ ldap_top }}', 'bindPassword': '{{ ldap_admin_password }}', 'ca': '', 'insecure': 'true', 'url': 'ldap://{{ groups.ldapserver[0] }}:389/ou=users,dc={{ ldap_second }},dc={{ ldap_top }}?cn'}]


openshift_install_examples=true
openshift_clock_enabled=true
openshift_check_min_host_disk_gb=1
# 安装使用的版本
#openshift_pkg_version=-3.9

openshift_public_ip={{ groups.masters[0] }}
openshift_master_cluster_method=native
openshift_master_cluster_hostname={{ groups.masters[0] }}
openshift_master_cluster_public_hostname={{ groups.masters[0] }}
openshift_master_default_subdomain={{ os_subdomain }}
openshift_router_selector='region=master'
openshift_registry_selector='region=master'

# Configure master API and console ports.
openshift_master_api_port=8443
openshift_master_console_port=8443

# logging configuration
#openshift_logging_use_ops=true
#openshift_logging_master_public_url=https://10.48.2.17:8443
#openshift_logging_install_logging=true
#openshift_logging_curator_default_days=30
#openshift_logging_namespace=logging
#openshift_logging_image_prefix=harbor.hicaas.com/openshift/origin-
#openshift_logging_image_version=v1.5.1
#openshift_logging_kibana_replica_count=2
##openshift_logging_fluentd_use_journal=true
#openshift_logging_es_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}
#openshift_logging_curator_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}
#openshift_logging_kibana_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}
#openshift_logging_es_ops_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}
#openshift_logging_curator_ops_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}
#openshift_logging_kibana_ops_nodeselector={"kubernetes.io/hostname": "node1.hicaas.com"}

# for docker
docker_upgrade=False
openshift_docker_options="--log-driver=json-file --log-opt max-size=50m -l warn --ipv6=false"
openshift_docker_insecure_registries={{ harbor_url }}

oreg_url={{ harbor_url }}/openshift/origin-${component}:${version}
#openshift_examples_modify_imagestreams=true
# 在下载镜像之前，首先选择addition_registry下载镜像
openshift_docker_additional_registries={{ harbor_url }}

# 系统中主机ip的掩码为9位，系统支持的最大主机数为2^9=512
osm_host_subnet_length=9
# 每个主机上的pod ip掩码位数为18-9=9，即每台主机上最多有2^9=512个pod的ip
osm_cluster_network_cidr=10.128.0.0/18

# Configure node kubelet arguments. pods-per-core is valid in OpenShift Origin 1.3 or OpenShift Container Platform 3.3 and later.
openshift_node_kubelet_args={'pods-per-core': ['10'], 'max-pods': ['320'], 'image-gc-high-threshold': ['90'], 'image-gc-low-threshold': ['80']}


openshift_web_console_prefix={{ harbor_url }}/openshift/
openshift_web_console_image_name=origin-web-console
openshift_web_console_version=v3.9
[masters]
# This variable overrides the internal cluster host name for the system. Use this when the system’s default IP address does not resolve to the system host name.
# This variable overrides the cluster internal IP address for the system. Use this when using an interface that is not configured with the default route.
